<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CreateAccountActivity">


        <ImageView
            android:id="@+id/backSignCricle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back_page_ellipse" />

        <ImageView
            android:id="@+id/backSign2"
            android:layout_width="16.5dp"
            android:layout_height="17.5dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="39dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back_page_sign" />

        <ImageView
            android:id="@+id/backGroundCirc"
            android:layout_width="360dp"
            android:layout_height="360dp"
            android:layout_marginStart="-60dp"
            android:layout_marginTop="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ellipse_shape_2" />

        <ImageView
            android:id="@+id/backGroundCirc2"
            android:layout_width="360dp"
            android:layout_height="380dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="220dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ellipse_shape_2" />

        <EditText
            android:id="@+id/editText_e_mail"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="333dp"
            android:layout_height="48dp"
            android:layout_marginStart="43dp"
            android:layout_marginTop="220dp"
            android:background="@android:color/transparent"
            android:ems="10"
            android:fontFamily="@font/inter"
            android:hint="Enter Email Id"
            android:inputType="textPersonName"
            android:textColorHint="#6B6B6B"
            android:textFontWeight="500"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edittext_createUser"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="333dp"
            android:layout_height="48dp"
            android:layout_marginStart="43dp"
            android:layout_marginTop="300dp"
            android:background="@android:color/transparent"
            android:ems="10"
            android:fontFamily="@font/inter"
            android:hint="Create Username"
            android:inputType="textPersonName"
            android:textColorHint="#6B6B6B"
            android:textFontWeight="500"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/editText_password"
            android:layout_width="333dp"
            android:layout_height="48dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="380dp"
            android:background="@android:color/transparent"
            android:ems="10"
            android:fontFamily="@font/inter"
            android:hint="Create Password"
            android:inputType="textPassword"
            android:textColorHint="#6B6B6B"
            android:textFontWeight="500"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_createAccount"
            android:layout_width="261dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="105dp"
            android:fontFamily="@font/inter"
            android:text="Create \nAccount :)"
            android:textColor="@color/black"
            android:textFontWeight="900"
            android:textSize="28sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider"
            android:layout_width="320dp"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:alpha="0.5"
            android:background="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText_e_mail" />

        <View
            android:id="@+id/divider2"
            android:layout_width="320dp"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:alpha="0.5"
            android:background="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText_password" />

        <View
            android:id="@+id/divider3"
            android:layout_width="320dp"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:alpha="0.5"
            android:background="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edittext_createUser" />

        <Button
            android:id="@+id/signUpButton"
            android:layout_width="230dp"
            android:layout_height="62dp"
            android:layout_marginTop="500dp"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/inder"
            android:text="@string/sign_up"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:cornerRadius="45dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>